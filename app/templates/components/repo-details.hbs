<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Details</h3>
    </div>
    <div class="panel-body" style="text-align: left">
        <div class="container inner-container">
            {{#if repoSelected}}
            <div class="row text-center">
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" id="author">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">repository</h3>
                        </div>
                        <div class="panel-body">
                            <h2>
                                Name: <a href={{generatedHash.html_url}}> {{generatedHash.name}} </a>
                            </h2>
                            <br>
                            <h5> <strong>Description:</strong> {{generatedHash.description}} </h5>
                            <h5> <strong>Private Repository:</strong>
                                {{#if generatedHash.private}}
                                    Yes
                                {{else}}
                                    No
                                {{/if}}
                            </h5>
                            <h5> <strong>Default Branch:</strong> {{generatedHash.default_branch}} </h5>
                            <h5> <strong>Language:</strong> {{generatedHash.language}} </h5>
                            <h5> <strong>Has Wiki:</strong>
                                {{#if generatedHash.has_wiki}}
                                    Yes
                                {{else}}
                                    No
                                {{/if}}
                            </h5>
                            <h5> <strong>Created At:</strong> {{generatedHash.created_at}} </h5>
                            <h5> <strong>Updated At:</strong> {{generatedHash.updated_at}} </h5>
                            <h5> <strong>Forks:</strong> {{generatedHash.forks_count}} </h5>
                            <h5> <strong>Open Issues:</strong> {{generatedHash.open_issues_count}} </h5>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12" id="author">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">author</h3>
                        </div>
                        <div class="panel-body">
                            <a href={{generatedHash.owner_html_url}} class="thumbnail">
                                <img src={{generatedHash.owner_avatar_url}} alt="avatar" class="avatar">
                                <br>
                            </a>
                            <h2>
                                <a href={{generatedHash.owner_html_url}}> {{generatedHash.owner}} </a>
                            </h2>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" id="author">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Clone URL</h3>
                        </div>
                        <div class="panel-body">
                            <h4>
                                {{generatedHash.clone_url}}
                            </h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">SSH URL</h3>
                        </div>
                        <div class="panel-body">
                            <h4>
                                {{generatedHash.ssh_url}}
                            </h4>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">GIT URL</h3>
                        </div>
                        <div class="panel-body">
                            <h4>
                                {{generatedHash.git_url}}
                            </h4>
                        </div>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
